<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SneakerDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailSImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/detailSName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSImageView"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/detailSDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSName"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/detailSPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSDetail"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/detailSYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSPrice"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/detailSBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailSYear"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:text="TextView" />


        <fragment
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/detailSBrand"
            app:mapType="normal"
            app:uiTiltGestures="true"
            app:uiZoomControls="true"
            app:uiZoomGestures="true" />
    </RelativeLayout>
</ScrollView>